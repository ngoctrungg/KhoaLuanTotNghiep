@model IEnumerable<KLTN_E.Data.HangHoa>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}






    <div class="container-fluid dashboard-content">

        <div class="row">
   
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card">
            
                <p class="card-header">
                    <a class=" btn btn-dark" asp-action="Create">Create New</a>
                </p>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenHh)
                                    </th>
                               
                                    <th>
                                        @Html.DisplayNameFor(model => model.MoTaDonVi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DonGia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Hinh)
                                    </th>
                      
                           
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoLanXem)
                                    </th>
                             
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaLoaiNavigation)
                                    </th>
                                    <th>
                                       Edit
                                    </th>
                  
                                </tr>
                            </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenHh)
                                        </td>
                                
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MoTaDonVi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DonGia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hinh)
                                        </td>
                                  
                                 
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLanXem)
                                            </td>
                                 
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaLoaiNavigation.MaLoai)
                                        </td>
                           
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.MaHh">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.MaHh">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.MaHh">Delete</a>
                                        </td>
                                    </tr>
                                }

                                </tbody>
                       
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


