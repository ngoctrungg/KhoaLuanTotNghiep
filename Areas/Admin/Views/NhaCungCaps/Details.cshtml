                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Logo)

                                </th>
                                <td>
                                    <img src="~/Hinh/NhaCC/@Model.Logo" alt="img" width="100" height="100" style="border-radius:50%">
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.NguoiLienLac)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.NguoiLienLac)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Email)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.Email)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.DiaChi)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.DiaChi)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.DienThoai)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.DienThoai)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Email)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.Email)
                                </td>
                            </tr>
                   
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.MoTa)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.MoTa)
