@model IEnumerable<KLTN_E.Data.ChiTietHd>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    <a class="btn btn-dark" asp-action="Index">Back to List</a>
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaHhNavigation.Hinh)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaHhNavigation.TenHh)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.MaHhNavigation.DonGia)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.MaHhNavigation.NgaySx)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/Hinh/HangHoa/@item.MaHhNavigation.Hinh" width="100" height="100">
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaHhNavigation.TenHh)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaHhNavigation.DonGia)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaHhNavigation.NgaySx)
                                        </td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>