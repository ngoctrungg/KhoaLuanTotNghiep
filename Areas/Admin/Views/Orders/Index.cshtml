@model IEnumerable<KLTN_E.Data.HoaDon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaHd)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.HoTen)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.NgayDat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CachThanhToan)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaTrangThaiNavigation.TenTrangThai)
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                    <th>Confirm</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaHd)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.HoTen)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayDat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CachThanhToan)
                                        </td>
                                        <td>
                                            @* @Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai) *@
                                            @if (item.MaTrangThaiNavigation.TenTrangThai == "Delivered")
                                            {
                                                <span class="text-success">@Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)</span>
                                            }
                                            else if (item.MaTrangThaiNavigation.TenTrangThai == "Pending delivery")
                                            {
                                                <span class="text-warning">@Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)</span>
                                            }
                                            else if (item.MaTrangThaiNavigation.TenTrangThai == "Cancelled")
                                            {
                                                <span class="text-danger">@Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)</span>
                                            }
                                            else
                                            {
                                                <span>@Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)</span>
                                            }
                                        </td>
                                        <td>
                                            <form asp-action="ViewOrderDetail" asp-controller="Orders" method="post">
                                                <input type="hidden" name="maHd" value="@item.MaHd" />
                                                <button type="submit" class="btn btn-dark p-1 rounded-pill"> Detail</button>
                                            </form>
                                        </td>
                                        <td>
                                            @if (item.MaTrangThaiNavigation.TenTrangThai == "Pending approval")
                                            {
                                                <form asp-action="ApproveOrder" asp-controller="Orders" method="post">
                                                    <input type="hidden" name="maHd" value="@item.MaHd" />
                                                    <button type="submit" class="btn btn-outline-success p-1">Approve</button>
                                                </form>
                                            }

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>