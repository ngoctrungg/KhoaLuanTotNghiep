@model IEnumerable<KLTN_E.Data.Loai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    <a class="btn btn-dark" asp-action="Create">Create New</a>

                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Hinh)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenLoai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenLoaiAlias)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MoTa)
                                    </th>
                                    
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/Hinh/Loai/@item.Hinh" width="50" height="50">
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenLoai)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenLoaiAlias)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MoTa)
                                        </td>
                                     
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.MaLoai">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.MaLoai">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.MaLoai">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>