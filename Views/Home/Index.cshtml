@model IEnumerable<KLTN_E.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "Home Page";

}

<section class="hero">
    <div class="hero__slider owl-carousel">
        <div class="hero__items set-bg" data-setbg="/imgFruits/bg_1.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-7 col-md-8">
                        <div class="hero__text">
                            <h6>Summer Collection</h6>
                            <h2>Fall - Winter Collections 2030</h2>
                            <p>
                                A specialist label creating luxury essentials. Ethically
                                crafted with an unwavering commitment to exceptional
                                quality.
                            </p>
                            <a asp-action="Index" asp-controller="HangHoa" class="primary-btn">
                                Shop now <span class="arrow_right"></span>
                            </a>
                            <div class="hero__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero__items set-bg" data-setbg="/imgFruits/bg_3.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-7 col-md-8">
                        <div class="hero__text">
                            <h6>Summer Collection</h6>
                            <h2>Fall - Winter Collections 2030</h2>
                            <p>
                                A specialist label creating luxury essentials. Ethically
                                crafted with an unwavering commitment to exceptional
                                quality.
                            </p>
                            <a href="#" class="primary-btn">
                                Shop now <span class="arrow_right"></span>
                            </a>
                            <div class="hero__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    int itemCount = 0;
}

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Outstanding</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">

            @foreach (var item in Model)
            {
                if (itemCount < 10 && item.DonGia > 60)
                {
                <div class="col-lg-3 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg"
                             data-setbg="/Hinh/HangHoa/@item.Hinh" alt="@item.TenHH">
                             @* data-setbg="https://localhost:7121/Hinh/HangHoa/@item.Hinh" alt="@item.TenHH"> *@
                            <span class="label">@item.TenLoai</span>
                            <ul class="product__hover">
                                <li>
                                    <a href="#"><img src="img/icon/heart.png" alt="" /></a>
                                </li>
                                <li>
                                    <a href="#">
                                        <img src="img/icon/compare.png" alt="" />
                                        <span>Compare</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#"><img src="img/icon/search.png" alt="" /></a>
                                </li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@item.TenHH</h6>
                            <a href="#" class="add-cart">+ Add To Cart</a>
                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5>$@item.DonGia</h5>
                         @*    <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1" />
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2" />
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3" />
                                </label>
                            </div> *@
                        </div>
                    </div>
                </div>
                }
                itemCount++;
            }




        </div>
    </div>
</section>





