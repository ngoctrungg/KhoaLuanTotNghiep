                        <div class="tab-pane fade" id="purchase-histories" role="tabpanel" aria-labelledby="purchase-histories-tab">
                            @if (Model.PurchaseHistory != null && Model.PurchaseHistory.Count > 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Produce Name</th>
                                            <th>OrderDate</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var purchaseHistoryItem in Model.PurchaseHistory)
                                        {
                                            @if (purchaseHistoryItem.SanPhams.Any())
                                            {
                                                <tr>
                                                    <td colspan="3">
                                                        Status: @purchaseHistoryItem.TenTrangThai
                                                    </td>
                                                    <td></td>
                                                </tr>
                                                var isFirstProduct = true;
                                                foreach (var product in purchaseHistoryItem.SanPhams)
                                                {
                                                    <tr>
                                                        <td><img src="https://localhost:7121/Hinh/HangHoa/@product.Hinh" alt="Image" width="50"></td>
                                                        <td>@product.TenHangHoa</td>
                                                        <td>@purchaseHistoryItem.NgayDat.ToShortDateString()</td>
                                                        <td>@product.SoLuong</td>
                                                        <td>@product.DonGia</td>
                                                        <td>
                                                            @if (isFirstProduct && purchaseHistoryItem.TenTrangThai == "Pending approval")
                                                            {
                                                                <form asp-action="CancelOrder" asp-controller="Cart" method="post">
                                                                    <input type="hidden" name="maHd" value="@purchaseHistoryItem.MaHd" />
                                                                    <button type="submit" class="site-btn">Cancel order</button>
                                                                </form>
                                                                isFirstProduct = false;
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>

                                <div class="product__pagination">
                                    @if (Model.PurchaseHistory != null && Model.PurchaseHistory.Count > 0)
                                    {
                                        for (int i = 1; i <= Model.PurchaseHistory.PageCount; i++)
                                        {
                                            <a href="@Url.Action("Profile", new { page = i, pageSize = Model.PurchaseHistory.PageSize, previousPage = Model.PurchaseHistory.PageNumber })" class="@(i == Model.PurchaseHistory.PageNumber ? "active" : "")">
                                                @i
                                            </a>
                                        }
                                    }
                                </div>

                            }
                            else
                            {
                                <p>There are no orders.</p>
                            }
                        </div>


