<script>
    // JavaScript to control tab switching
    $(document).ready(function () {
        // Lưu trạng thái của tab hiện tại vào sessionStorage khi tab được chuyển
        $('#myTab a').on('click', function (e) {
            e.preventDefault();
            var tabId = $(this).attr('id');
            sessionStorage.setItem('activeTab', tabId);
            $(this).tab('show');
        });

        // Khôi phục tab hiện tại từ sessionStorage khi trang được tải
        var activeTab = sessionStorage.getItem('activeTab');
        if (activeTab) {
            $('#' + activeTab).tab('show');
        }
    });
</script>
