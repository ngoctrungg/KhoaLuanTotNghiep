@using KLTN_E.ViewModels

@model List<PurchaseHistoryVM>

<h2>Lịch sử mua hàng</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Ngày đặt</th>
                <th>Tên trạng thái</th>
                <th>Tên hàng hóa</th>
                <th>Đơn giá</th>
                <th>Hình ảnh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaHd</td>
                    <td>@item.NgayDat.ToShortDateString()</td>
                    <td>@item.TenTrangThai</td>
                    <td>@item.TenHangHoa</td>
                    <td>@item.DonGia</td>
                    <td><img src="@item.Hinh" alt="Hình ảnh" width="50"></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có dữ liệu.</p>
}

