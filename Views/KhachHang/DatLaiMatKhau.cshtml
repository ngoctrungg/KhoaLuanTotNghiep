@model KLTN_E.ViewModels.DatLaiMatKhauVM
@{
    ViewData["Title"] = "Resetpassword";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Register</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Home</a>
                        <a href="#">Page</a>
                        <span>Forgot password</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<form asp-controller="KhachHang" asp-action="DatLaiMatKhau" method="post">
    <div class="form-group">
        <label asp-for="@Model.OldPassword"></label>
        <input asp-for="@Model.OldPassword" class="form-control" type="password" required>
        <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.NewPassword"></label>
        <input asp-for="@Model.NewPassword" class="form-control" type="password" required>
        <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" required>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Reset password</button>
</form>
