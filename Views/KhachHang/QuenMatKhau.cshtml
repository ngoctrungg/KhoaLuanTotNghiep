@model KLTN_E.ViewModels.QuenMatKhauVM
@{
    ViewData["Title"] = "Forgot password";
}



<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Forgot Password</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Home</a>
                        <a asp-action="Index" asp-controller="DangNhap">Login</a>
                        <span>Forgot Password</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->




<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form asp-controller="KhachHang" asp-action="QuenMatKhau" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="row d-flex justify-content-center ">

                    <div class="col-lg-12 col-md-6">
                        <h6 class="checkout__title">Forgot Password</h6>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                  
                                    <label for="MaKh">UserName:</label>
                                    <input asp-for="@Model.MaKh"required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label for="email">Email:</label>
                                    <input asp-for="@Model.Email"  type="email" required>
                                </div>
                            </div>

                        </div>
                   
                        <button type="submit" class="site-btn">Send password reset link</button>
                    </div>



                </div>

            </form>
        </div>
    </div>
</section>