@model KLTN_E.ViewModels.DatLaiMatKhauVM

<form asp-action="ChangePassword" asp-controller="KhachHang">
    <div class="tab-pane fade" id="account-change-password">
        <div class="card-body pb-2">
            <div class="form-group">
                <label class="form-label">Current password</label>
                <input asp-for="@Model.OldPassword" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">New password</label>
                <input asp-for="@Model.NewPassword" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Confirm new password</label>
                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Reset Password</button>
        </div>
    </div>
</form>
